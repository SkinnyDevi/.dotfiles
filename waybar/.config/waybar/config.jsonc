{
  "layer": "top",
  "position": "top",
  "height": 30,
  "reload_style_on_change": true,
  "modules-left": [
    "hyprland/workspaces",
    "tray"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "pulseaudio",
    "pulseaudio#microphone",
    "cpu",
    "memory",
    "clock",
    "custom/swaync"
  ],
  "hyprland/workspaces": {
    "format": "{name}: {icon}",
    "format-icons": {
      "1": "ÔÑå",
      "2": "ÔÑå",
      "3": "ÔÑå",
      "4": "ÔÑå",
      "5": "ÔÑå",
      "active": "ÔÑë",
      "default": "ÔÑå",
      "persistent": "ÔÑå"
    },
    "persistent-workspaces": {
      "*": [
        1,
        2,
        3,
        4
      ]
    },
    "sort-by": "number",
    "on-click": "activate",
    "all-outputs": true
  },
  "hyprland/window": {
    "format": "{title}",
    "max-length": 50
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}Ôäî",
    "format-bluetooth-muted": "\ueb24 {icon}Ôäî",
    "format-muted": "0% \ueb24",
    "format-icons": {
      "headphone": "ÔÄ•",
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "ÔÄ®"
      ]
    },
    "scroll-step": 1,
    "on-click": "pavucontrol"
  },
  "pulseaudio#microphone": {
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "0% ÔÑ±",
    "format": "{format_source}",
    "on-click": "pavucontrol"
  },
  "custom/easyeffects": {
    "format": "üéõÔ∏è",
    "tooltip": "Open Qjackctl Graph",
    "on-click": "easyeffects"
  },
  "cpu": {
    "format": "CPU {usage}%",
    "on-click": "WAYLAND_DISPLAY=1 wezterm start -- htop"
  },
  "memory": {
    "format": "RAM {}%",
    "on-click": "WAYLAND_DISPLAY=1 wezterm start -- htop"
  },
  "bluetooth": {
    "on-click": "blueberry"
  },
  "clock": {
    "format": "{:%H:%M %d/%m/%Y}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  },
  "custom/swaync": {
    "format": "üóÑÔ∏è",
    "on-click": "swaync-client -t -sj"
  }
}
