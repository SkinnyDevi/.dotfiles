{
  "layer": "top",
  "position": "top",
  "height": 30,
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "pulseaudio",
    "pulseaudio#microphone",
    "cpu",
    "memory",
    "clock"
  ],
  "hyprland/workspaces": {
    "format": "{name}: {icon}",
    "format-icons": {
      "1": "",
      "2": "",
      "3": "",
      "4": "",
      "5": "",
      "active": "",
      "default": "",
      "persistent": ""
    },
    "persistent-workspaces": {
      "*": [
        1,
        2,
        3,
        4
      ]
    },
    "sort-by": "number",
    "on-click": "activate",
    "all-outputs": true
  },
  "hyprland/window": {
    "format": "{title}",
    "max-length": 50
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}",
    "format-bluetooth-muted": "\ueb24 {icon}",
    "format-muted": "0% \ueb24",
    "format-icons": {
      "headphone": "",
      "default": [
        "",
        "",
        ""
      ]
    },
    "scroll-step": 1,
    "on-click": "pavucontrol"
  },
  "pulseaudio#microphone": {
    "format-source": "{volume}% ",
    "format-source-muted": "0% ",
    "format": "{format_source}",
    "on-click": "pavucontrol"
  },
  "cpu": {
    "format": "CPU {usage}%"
  },
  "memory": {
    "format": "RAM {}%"
  },
  "clock": {
    "format": "{:%H:%M %d/%m/%Y}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  }
}
